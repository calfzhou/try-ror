<h1>Listing articles</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Creation</th>
    <th>Text</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.created_at.localtime %></td>
      <td><%= article.text %></td>
    </tr>
  <% end %>
</table>
